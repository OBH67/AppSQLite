<?xml version="1.0" encoding="utf-8" ?><ContentPage xmlns="http://xamarin.com/schemas/2014/forms"			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"			 x:Class="AppAndroidSQLite.UI_Registrar">	<ScrollView>		<StackLayout Padding="20" Spacing="30">			<Label Text="Nombre: "/>            <Entry Placeholder="Introduce tu nombre" x:Name="NombreRegistro" Keyboard="Text"/>            <Label Text="Usuario: "/>            <Entry Placeholder="Elige un usuario" x:Name="UserRegistro" Keyboard="Text"/>            <Label Text="Password: "/>            <Entry Placeholder="Elige una contraseña" x:Name="PasswordRegistro" Keyboard="Text"                   IsPassword="True"/>            <Button Text="Agregar" Clicked="Button_Clicked_Agregar" BackgroundColor="Azure">             </Button>       		</StackLayout>	</ScrollView></ContentPage>