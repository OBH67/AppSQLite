<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppAndroidSQLite.UI_Elemento">
    <ScrollView>
        <StackLayout Spacing="10" Padding="10">
            <Label x:Name="Mensaje"/>
            <Label Text="Nombre: "/>
            <Entry x:Name="NombreElement" Placeholder="Nombre"/>
            <Label Text="Usuario: "/>
            <Entry x:Name="UserElement" Placeholder="Usuario"/>
            <Label Text="Contraseña: "/>
            <Entry x:Name="PassElement" Placeholder="Contraseña"/>
            <Button Text="Actualizar" Clicked="Button_Clicked_Actualizar" BackgroundColor="LawnGreen"/>
            <Button Text="Eliminar" Clicked="Button_Clicked_Eliminar" BackgroundColor="Red"/>
        </StackLayout>
    </ScrollView>
</ContentPage>