<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppAndroidSQLite.UI_Login">
           <ScrollView>
           <StackLayout Padding="30" Spacing="30">
               <Entry Placeholder="Introduce tu usuario"
                      Keyboard="Text" x:Name="UserLogin"/>
               <Entry Placeholder ="Introduce tu contraseña"
                      Keyboard="Text" IsPassword="True"
                      x:Name="PasswordLogin"/>
               <Button Text="Iniciar Sesion"
                       BackgroundColor="DarkCyan"
                       TextColor="White" Clicked="Button_Clicked_Login"/>
               <Button Text="Registrar" Clicked="Button_Clicked_Registro"/>       
           </StackLayout>
       </ScrollView>
</ContentPage>